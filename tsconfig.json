{
  "compilerOptions": {
    "noEmit": true,
    "module": "esnext",
    "target": "es2021",
    "lib": ["es2021"],
    "strict": true,
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "types": ["@types/jest", "@cloudflare/workers-types", "vitest-environment-miniflare/globals"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts", "node_modules", "dist", "test"]
}
